<div class="container">
  <div class="row justify-content-center">
    <div class="col-6">
      <h1>Add Chore to plant <%= @plant.name %></h1>
      <%= simple_form_for [@plant, @completion] do |f| %>
        <%= f.association :chore, label: "What did you do", as: :check_boxes %>
        <div class="d-grid">
          <%= f.submit "Add Chore", class: "btn btn-primary" %>
        </div>
      <% end %>
    </div>
  </div>
  <div class="row justify-content-center mt-5">
    <div class="col-6">
      <h2>Chores for plant:</h2>
      <ul>
        <% @plant.chores.each do |chore| %>
          <li><%= chore.name %></li>
        <% end %>
      </ul>
    </div>
  </div>
</div>
